# Database Configuration
# For SQLite (development)
# DATABASE_URL=sqlite:///./test.db

# For SQL Server (production)
DATABASE_URL=mssql+pyodbc://USER:PASSWORD@HOST:PORT/DATABASE?driver=ODBC+Driver+17+for+SQL+Server

# Stripe Payment Configuration
STRIPE_PRIVATE_KEY=sk_test_your_stripe_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Frontend URL
CLIENT_URL=http://localhost:3000

# SMTP Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password-here
EMAIL_FROM=your-email@gmail.com

# External API Services
BASE_URL=https://matricula.co.pt/API/reg.asmx/CheckPortugal
USERNAME_API=your_username

# Security Keys
# Generate a secure secret key: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-min-32-chars

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Facebook OAuth
FACEBOOK_CLIENT_ID=your-facebook-app-id
FACEBOOK_CLIENT_SECRET=your-facebook-app-secret

# Initial Admin Credentials (used only for seeding)
# IMPORTANT: Change these in production and force password change on first login
INITIAL_ADMIN_EMAIL=admin@yourdomain.com
INITIAL_ADMIN_PASSWORD=YourSecurePassword123!@#

# Default Passwords for Seeds (used only for test/dev)
# These are used when creating test customers and employees
DEFAULT_CUSTOMER_PASSWORD=Customer@2025!Test
DEFAULT_EMPLOYEE_PASSWORD=Employee@2025!Change

# Environment Mode (development, staging, production)
ENVIRONMENT=development

# Optional: Error Monitoring (Sentry)
# SENTRY_DSN=https://your-sentry-dsn-here

# Optional: Rate Limiting
# RATE_LIMIT_PER_MINUTE=60

# Optional: API Timeout Settings
# EXTERNAL_API_TIMEOUT=15
# EXTERNAL_API_RETRIES=3
# EXTERNAL_API_BACKOFF=0.5
